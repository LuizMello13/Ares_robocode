//Lucas y Ennie
package Project;
import robocode.*;
import java.awt.*;
import java.awt.Color;

public class Zeus extends AdvancedRobot {
	boolean movingForward;


	public void run() {
		 setColors(Color.black,Color.pink,Color.black); 

		//Loop
		while (true) {
			setAhead(10000);//vai pra frente mil pixels
			movingForward = true;
			setTurnRight(90);//se der certo vai pra direita 90 pixels
			
			waitFor(new TurnCompleteCondition(this));
			setTurnLeft(300);
			waitFor(new TurnCompleteCondition(this));
			setTurnRight(300);
			waitFor(new TurnCompleteCondition(this));
		}
	}

	public void onHitWall(HitWallEvent e) {
		reverseDirection();// quando for pra parede vai pra direção reversa
        setTurnLeft(300);	
}
	

	public void reverseDirection() {
		if (movingForward) {
			setBack(40000);
			movingForward = false;
		} else {
			setAhead(40000);
			movingForward = true;
		}
	}


	public void onScannedRobot(ScannedRobotEvent e) {
		if (e.getDistance() < 100 && getEnergy() > 50) {
       fire(3); //se a distancia for menor que 100 pixels e energia meno que 50 da um tiro de lvl 3
        } // caso contrário atira lvl 2
        else {
         fire(2);
      }

        scan();
	}

	public void onHitRobot(HitRobotEvent e) {
		if (e.isMyFault()) {
			reverseDirection();
		}
	}
}
